# Application
APP_NAME="SMA Tunas Harapan"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://smatunasharapan.sch.id

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=cms_sekolah
DB_USERNAME=cms_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Root password untuk MySQL container
DB_ROOT_PASSWORD=CHANGE_THIS_TO_ANOTHER_SECURE_PASSWORD

# Session & Security
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# Cache
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Mail (optional - configure if needed)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=info@smatunasharapan.sch.id
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Broadcasting (leave as default)
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=public
